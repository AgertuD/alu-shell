#!/usr/bin/env bash
#!/bin/bash

# Initialize a counter
count=1

# Loop while count is less than or equal to 10
while [ $count -le 10 ]
do
    if [ $count -eq 4 ]; then
        echo "bad luck"  # Display for the 4th iteration
    elif [ $count -eq 8 ]; then
        echo "good luck"  # Display for the 8th iteration
    else
        echo "Best School"  # Display for all other iterations
    fi
    ((count++))  # Increment the counter
done
