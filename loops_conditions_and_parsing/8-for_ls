#!/bin/bash

# Loop through the files and directories in the current directory
for item in *; do
    # Check if the item is a regular file or directory and not hidden
    if [[ -f $item || -d $item ]]; then
        # Extract the part of the name after the first dash
        name_after_dash="${item#*-}"
        
        # Display the result if there's a name after the dash
        if [[ $name_after_dash != "$item" ]]; then
            echo "$name_after_dash"
        fi
    fi
done
